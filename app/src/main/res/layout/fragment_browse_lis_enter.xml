<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bit_white"

    android:orientation="vertical"
    android:layout_height="match_parent">
    <FrameLayout    android:layout_width="match_parent"

        android:background="#50000000"
        android:id="@+id/fullView"
        android:visibility="gone"
        android:layout_height="match_parent" >
        <co.jlabs.xar.bigImage.view.BigImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mBigImage"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:id="@+id/head_ni">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/tip"
        android:layout_height="wrap_content">
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_height="5dp"
            android:id="@+id/textView"
            android:background="#000000"
            android:layout_centerHorizontal="true"
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:text="Top 500"
            />
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_height="5dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView1"
            android:background="#000000"
            android:layout_centerHorizontal="true"
            android:layout_width="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_margin="5dp"

        android:id="@+id/recycler"
        android:layout_height="wrap_content"/>

    </LinearLayout>




</LinearLayout>