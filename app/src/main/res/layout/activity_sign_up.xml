<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.jlabs.xar.activity_area.SignUp"
    android:background="@drawable/bit">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:gravity="bottom"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/s_linearLayout"
        android:layout_height="120dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/logo_avant"
            android:id="@+id/s_imageView2"
            android:layout_marginBottom="-30dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <co.jlabs.xar.custom_views.BebasNeueTextView
        android:layout_height="5dp"
        android:id="@+id/s_textView"
        app:layout_constraintRight_toRightOf="@+id/s_linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/s_linearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/s_linearLayout"
        android:background="#ffffff"
        android:layout_width="40dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <co.jlabs.xar.custom_views.BebasNeueTextView
        android:text="Enter your name, email and password to join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s_textView2"
        app:layout_constraintRight_toRightOf="@+id/s_linearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/s_linearLayout"
        android:gravity="center"
        android:textColor="@color/white"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/s_textView"
        android:textAlignment="center"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />


    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@+id/s_textView2"
        app:layout_constraintRight_toRightOf="@+id/s_textView2"
        app:layout_constraintTop_toBottomOf="@+id/s_textView2"
        android:layout_width="0dp"
        android:id="@+id/s_signup"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/transparent_with_border"

            android:layout_marginTop="8dp">
            <co.jlabs.xar.custom_views.BebasNeueEdit
                android:layout_width="match_parent"
                android:hint="Email"
                android:id="@+id/s_email"
                android:gravity="center_vertical"
                android:textColorHint="#ffffff"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFf"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/transparent_with_border"

            android:layout_marginTop="8dp">
            <co.jlabs.xar.custom_views.BebasNeueEdit
                android:layout_width="match_parent"
                android:hint="PASSWORD"
                android:background="@android:color/transparent"
                android:textColorHint="#ffffff"
                android:id="@+id/s_password"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFf"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/transparent_with_border"

            android:layout_marginTop="8dp">
            <co.jlabs.xar.custom_views.BebasNeueEdit
                android:layout_width="match_parent"
                android:hint="Full name"
                android:background="@android:color/transparent"
                android:textColorHint="#ffffff"
                android:gravity="center_vertical"
                android:id="@+id/s_fullname"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFf"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:id="@+id/s_signup1"

            android:layout_marginTop="8dp">
            <co.jlabs.xar.custom_views.BebasNeueTextView
                android:layout_width="wrap_content"
                android:text="Join Artsy"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:textColor="#F1335E"
                />


        </RelativeLayout>
    </LinearLayout>

    <co.jlabs.xar.custom_views.BebasNeueTextView
        android:text="by signing up,you agree to our\nterms of use and privacy policy."
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/s_textView3"
        android:textSize="12sp"
        android:gravity="center"
        app:fontname="lb"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="@+id/s_signup"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/s_signup"
        app:layout_constraintLeft_toLeftOf="@+id/s_signup"
        android:layout_marginTop="8dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/transparent_with_border"
        android:id="@+id/s_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/s_textView3"
        app:layout_constraintLeft_toLeftOf="@+id/s_textView3"
        app:layout_constraintRight_toRightOf="@+id/s_textView3"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp">

        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_width="wrap_content"
            android:textAllCaps="true"
            android:text="Sign in"
            android:id="@+id/s_signn"
            app:fontname="lb"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_width="wrap_content"
            android:textAllCaps="true"
            app:fontname="lb"
            android:text="Already have an account?"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"

            android:layout_toLeftOf="@+id/s_signn"
            android:layout_toStartOf="@+id/s_signn" />

    </RelativeLayout>




</android.support.constraint.ConstraintLayout>

