            android:layout_below="@+id/medi"
            android:id="@+id/bar5"
            android:layout_height="0.5dp" />
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/bar5"
            android:text="markings"
