<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:background="@drawable/bit_white" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:id="@+id/fragA_LinearLayout"

        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/painting"
            android:src="@drawable/rachel_brosnahan_a_l"
            android:layout_height="280dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/painting"
            android:src="@drawable/red_heart"
            android:padding="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/follow"
            android:background="@drawable/transparent_with_red_border"
            android:layout_height="20dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_toLeftOf="@+id/follow"
            android:layout_below="@+id/painting"
            android:src="@drawable/black_heart"
            android:padding="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/follow1"
            android:background="@drawable/transparent_with_black_border"
            android:layout_height="20dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_toRightOf="@+id/follow"
            android:layout_below="@+id/painting"
            android:src="@drawable/black_heart"
            android:padding="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/follow2"
            android:background="@drawable/transparent_with_black_border"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"
            android:id="@+id/bar1"
            android:layout_below="@+id/follow"/>
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/bar1"
            android:text="Title of painting"
            android:id="@+id/top"
            android:textColor="#767779"
            android:paddingTop="4dp"
            android:textSize="15sp"
            android:paddingBottom="4dp"
            android:layout_height="wrap_content" />
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/bar1"
            
            android:id="@+id/painting_title"
            android:textColor="#767779"
            android:layout_alignParentRight="true"
            android:paddingTop="4dp"
            android:textSize="15sp"
            android:paddingBottom="4dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:background="#767779"
            android:id="@+id/bar2"
            android:layout_below="@+id/top"
            android:layout_height="0.5dp" />
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/bar2"
            android:text="size"
            android:id="@+id/sizes"
            android:textColor="#767779"
            android:paddingTop="4dp"
            android:textSize="15sp"
            android:paddingBottom="4dp"
            android:layout_height="wrap_content" />
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/bar2"
            
            android:id="@+id/size"
            android:textColor="#767779"
            android:layout_alignParentRight="true"
            android:paddingTop="4dp"
            android:textSize="15sp"
            android:paddingBottom="4dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:background="#767779"
            android:id="@+id/bar3"
            android:layout_below="@+id/sizes"
            android:layout_height="0.5dp" />
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/bar3"
