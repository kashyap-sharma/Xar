<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingBottom="2dp"
    android:paddingRight="2dp"
    android:paddingLeft="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/imageart"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="#50000000"
        android:src="@drawable/rachel_brosnahan_a_l"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:paddingTop="45dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:text="Salvador Dali"
            />
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_height="5dp"
            android:layout_below="@+id/name"
            android:id="@+id/textView"
            android:background="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:fontname="lb"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:text="Serbian, born 1946"
            />
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_height="5dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView1"
            android:background="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_width="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="FOLLOW"
            android:layout_margin="5dp"
            android:id="@+id/follow"
            android:paddingTop="2dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:background="@drawable/transparent_with_border"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</FrameLayout>