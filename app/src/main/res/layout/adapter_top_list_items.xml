<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="5dp"
    android:id="@+id/nigga"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/frame"
        android:layout_height="120dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/imageart"
            android:src="@drawable/rachel_brosnahan_a_l"/>
        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/heart"
            android:id="@+id/white_heart"
            android:layout_centerInParent="true"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:layout_gravity="end"
            android:background="@drawable/transparent_with_border"
            android:layout_height="20dp" />
        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/zoom"
            android:id="@+id/white_zoom"
            android:layout_centerInParent="true"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="28dp"
            android:layout_gravity="end"
            android:background="@drawable/transparent_with_border"
            android:layout_height="20dp" />


    </FrameLayout>
    <co.jlabs.xar.custom_views.BebasNeueTextView
        android:layout_width="18dp"
        android:layout_below="@+id/frame"
        android:layout_marginTop="8dp"
        android:textColor="#ff0000"
        android:text="01"
        android:id="@+id/rank"
        android:textSize="13sp"
        android:gravity="center"
        android:background="@drawable/transparent_with_black_border_2"
        android:layout_height="18dp" />
    <co.jlabs.xar.custom_views.BebasNeueTextView
        android:layout_width="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:gravity="top"
        android:id="@+id/title"
        android:text="The silence of marina abramovic"
        android:textSize="16sp"
        android:layout_below="@+id/frame"
        android:layout_toRightOf="@+id/rank"
        android:layout_height="wrap_content" />
    <co.jlabs.xar.custom_views.BebasNeueTextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:gravity="top"
        android:id="@+id/artist_name"
        android:text="Marina AbramoviÄ‡"
        android:textSize="14sp"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/rank"
        android:layout_height="wrap_content" />
    <co.jlabs.xar.custom_views.BebasNeueTextView
        android:layout_height="4dp"
        android:id="@+id/textView"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/artist_name"
        android:background="#000000"
        android:layout_toRightOf="@+id/rank"
        android:layout_width="25dp"
        android:layout_marginBottom="5dp"
        />
    <co.jlabs.xar.custom_views.BebasNeueTextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/rank"
        android:layout_marginLeft="5dp"
        app:fontname="lb"
        android:id="@+id/details"
        android:textColor="#767779"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:text="Oil on canvas Lorem Ipsum Doler "
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@drawable/transparent_with_black_border_2"
        android:layout_below="@+id/details"
        android:layout_toRightOf="@+id/rank"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/ll"
        android:layout_height="25dp">
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:text="RS.1000"
            android:id="@+id/rupee"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_width="2dp"
            android:background="#000000"
            android:text="RS.1000"
            android:rotation="15"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <co.jlabs.xar.custom_views.BebasNeueTextView
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:text="$. 15.44"
            android:padding="5dp"
            android:id="@+id/dollar"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll"
        android:background="#000000"/>


</RelativeLayout>