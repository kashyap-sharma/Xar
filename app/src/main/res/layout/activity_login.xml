<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.jlabs.xar.activity_area.Login"
    android:background="@drawable/bit">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:gravity="bottom"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/linearLayout"
        android:layout_height="120dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/logo_avant"
            android:id="@+id/imageView2"
            android:layout_marginBottom="-25dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <TextView
        android:layout_height="5dp"
        android:id="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
        android:background="#ffffff"
        android:layout_width="40dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:text="THE WORLD'S GREATEST ART, ONLINE. SIGN UP\nTO DISCOVER AND COLLECT YOUR FAVOURITES."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        app:layout_constraintRight_toRightOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
        android:gravity="center"
        android:textColor="@color/white"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textAlignment="center"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/rel"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="SIGN UP WITH FACEBOOK"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:textColor="#F1335E"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/rel2"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/rel"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="SIGN UP WITH FACEBOOK"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:textColor="#F1335E"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:id="@+id/signup"
        app:layout_constraintTop_toBottomOf="@+id/rel2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="SIGN UP WITH FACEBOOK"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:textColor="#F1335E"
            />


    </RelativeLayout>
    <TextView
        android:text="by signing up,you agree to our\nterms and privacy policy."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintRight_toRightOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
        android:gravity="center"
        android:textColor="@color/white"
        android:textAllCaps="true"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/signup"
        android:textAlignment="center"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:background="@drawable/transparent_with_border"
        android:id="@+id/signin"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:textAllCaps="true"
            android:text="Already have an account?"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/signn"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textAllCaps="true"
            android:text="Sign in"
            android:id="@+id/signn"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
           android:paddingRight="8dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            />


    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
