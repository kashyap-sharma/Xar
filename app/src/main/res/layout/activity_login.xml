<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.jlabs.xar.activity_area.Login"
    android:background="@drawable/bit">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:gravity="bottom"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/linearLayout"
        android:layout_height="120dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/logo_avant"
            android:id="@+id/imageView2"
            android:layout_marginBottom="-30dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <co.jlabs.xar.custom_views.BebasNeue
        android:layout_height="5dp"
        android:id="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
        android:background="#ffffff"
        android:layout_width="40dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <co.jlabs.xar.custom_views.BebasNeue
        android:text="THE WORLD'S GREATEST ART, ONLINE. SIGN UP\nTO DISCOVER AND COLLECT YOUR FAVOURITES."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        app:layout_constraintRight_toRightOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout"
        android:gravity="center"
        android:textColor="@color/white"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="18dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textAlignment="center"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        android:id="@+id/rel"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="@+id/textView2">
        <co.jlabs.xar.custom_views.BebasNeue
            android:layout_width="wrap_content"
            android:text="SIGN UP WITH FACEBOOK"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"

            android:textColor="#F1335E"
            android:textSize="22sp"
            />
        <co.jlabs.xar.custom_views.Fontasm
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="#F1335E"
            android:paddingRight="13dp"
            android:text="&#xf09a;"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/rel2"
        app:layout_constraintTop_toBottomOf="@+id/rel"
        android:background="@color/white"
        app:layout_constraintRight_toRightOf="@+id/rel"
        app:layout_constraintLeft_toLeftOf="@+id/rel"
        android:layout_marginTop="8dp">
        <co.jlabs.xar.custom_views.BebasNeue
            android:layout_width="wrap_content"
            android:text="SIGN UP WITH GOOGLE"
            android:textSize="22sp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:textColor="#F1335E"
            />
        <co.jlabs.xar.custom_views.Fontasm
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="#F1335E"
            android:paddingRight="10dp"
            android:text="&#xf1a0;"/>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:id="@+id/signup"
        app:layout_constraintLeft_toLeftOf="@+id/rel2"
        app:layout_constraintRight_toRightOf="@+id/rel2"
        app:layout_constraintTop_toBottomOf="@+id/rel2"
        android:layout_marginTop="8dp">
        <co.jlabs.xar.custom_views.BebasNeue
            android:layout_width="wrap_content"
            android:text="SIGN UP USING YOUR EMAIL"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:textColor="#F1335E"
            />


    </RelativeLayout>
    <co.jlabs.xar.custom_views.BebasNeue
        android:text="by signing up,you agree to our\nterms of use and privacy policy."
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@+id/signup"
        app:layout_constraintLeft_toLeftOf="@+id/signup"
        android:gravity="center"
        app:fontname="lb"
        android:textColor="@color/white"
        android:textAllCaps="true"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/signup"
        android:textAlignment="center" />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/transparent_with_border"
        android:id="@+id/signin"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp">

        <co.jlabs.xar.custom_views.BebasNeue
            android:layout_width="wrap_content"
            android:textAllCaps="true"
            android:text="Sign in"
            android:id="@+id/signn"
            app:fontname="lb"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

        <co.jlabs.xar.custom_views.BebasNeue
            android:layout_width="wrap_content"
            android:textAllCaps="true"
            app:fontname="lb"
            android:text="Already have an account?"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"

            android:layout_toLeftOf="@+id/signn"
            android:layout_toStartOf="@+id/signn" />

    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
