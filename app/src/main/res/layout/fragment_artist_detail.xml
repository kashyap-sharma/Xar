<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    android:background="@drawable/bit_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <co.jlabs.xar.coordinatorlayouthelper.HeaderLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="co.jlabs.xar.coordinatorlayouthelper.HeaderLayoutBehavior">

        <RelativeLayout
            android:id="@+id/layout_base"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <co.jlabs.xar.custom_views.BebasNeueTextView
                android:layout_height="5dp"
                android:id="@+id/textView"
                android:background="#000000"
                android:layout_centerHorizontal="true"
                android:layout_width="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                />
            <co.jlabs.xar.custom_views.BebasNeueTextView
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:text="Marina AbramoviÄ‡"
                />
            <co.jlabs.xar.custom_views.BebasNeueTextView
                android:layout_height="5dp"
                android:id="@+id/textView2"
                android:layout_below="@+id/textView1"
                android:background="#000000"
                android:layout_centerHorizontal="true"
                android:layout_width="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="3dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <co.jlabs.xar.custom_views.Fontasm
                    android:layout_width="20dp"
                    android:background="@drawable/transparent_with_black_border"
                    android:textColor="#000000"
                    android:layout_margin="2dp"

                    android:text="&#xf099;"
                    android:id="@+id/twitter"
                    android:gravity="center"
                    android:layout_height="20dp" />
                <co.jlabs.xar.custom_views.Fontasm
                    android:layout_width="20dp"
                    android:background="@drawable/transparent_with_black_border"
                    android:textColor="#000000"
                    android:text="&#xf09a;"
                    android:layout_toRightOf="@+id/twitter"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:id="@+id/facebook"
                    android:layout_height="20dp" />
                <co.jlabs.xar.custom_views.BebasNeueTextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="FOLlow"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/facebook"
                    android:background="@drawable/transparent_with_black_border"
                    android:textColor="#000000"/>

            </RelativeLayout>

        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"

            app:tabIndicatorColor="@android:color/transparent"
            app:tabIndicatorHeight="4dp"
            android:layout_alignParentBottom="true"
            app:tabPaddingStart="0dp"
            app:tabMode="fixed"
            app:tabGravity="center"
            app:tabTextColor="#767779"
            app:tabSelectedTextColor="#EA315A"
            app:tabPaddingEnd="0dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
    </co.jlabs.xar.coordinatorlayouthelper.HeaderLayout>
    <co.jlabs.xar.coordinatorlayouthelper.CoordinatorLayoutHelperViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="co.jlabs.xar.coordinatorlayouthelper.ContentsLayoutBehavior">

    </co.jlabs.xar.coordinatorlayouthelper.CoordinatorLayoutHelperViewPager>

</android.support.design.widget.CoordinatorLayout>