<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    android:background="@drawable/bit_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bit_white"
        android:fitsSystemWindows="true"
        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            >
        <RelativeLayout
            android:id="@+id/layout_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <co.jlabs.xar.custom_views.BebasNeueTextView
                android:layout_height="5dp"
                android:id="@+id/textView"
                android:background="#000000"
                android:layout_centerHorizontal="true"
                android:layout_width="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                />
            <co.jlabs.xar.custom_views.BebasNeueTextView
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                />
            <co.jlabs.xar.custom_views.BebasNeueTextView
                android:layout_height="5dp"
                android:id="@+id/textView2"
                android:layout_below="@+id/textView1"
                android:background="#000000"
                android:layout_centerHorizontal="true"
                android:layout_width="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="3dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <co.jlabs.xar.custom_views.Fontasm
                    android:layout_width="20dp"
                    android:background="@drawable/transparent_with_black_border"
                    android:textColor="#000000"
                    android:layout_margin="2dp"

                    android:text="&#xf099;"
                    android:id="@+id/twitter"
                    android:gravity="center"
                    android:layout_height="20dp" />
                <co.jlabs.xar.custom_views.Fontasm
                    android:layout_width="20dp"
                    android:background="@drawable/transparent_with_black_border"
                    android:textColor="#000000"
                    android:text="&#xf09a;"
                    android:layout_toRightOf="@+id/twitter"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:id="@+id/facebook"
                    android:layout_height="20dp" />
                <co.jlabs.xar.custom_views.BebasNeueTextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="FOLlow"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/facebook"
                    android:background="@drawable/transparent_with_black_border"
                    android:textColor="#000000"/>

            </RelativeLayout>

        </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabIndicatorHeight="4dp"
            android:layout_alignParentBottom="true"
            app:tabPaddingStart="0dp"
            app:tabMode="fixed"
            app:tabGravity="center"
            app:tabTextColor="#767779"
            app:tabSelectedTextColor="#EA315A"
            app:tabPaddingEnd="0dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </android.support.design.widget.AppBarLayout>

        <co.jlabs.xar.custom_views.CustomViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_marginBottom="58dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent"
             />
</android.support.design.widget.CoordinatorLayout>